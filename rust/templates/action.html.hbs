{{#*inline "page"}}

<div class="container-fluid">
    <div class="row">
        <!-- Display nothing from xs to sm, display something from md to xl -->
        <nav class="d-none d-md-block col-2 sidebar sidebar-left">
            <ul class="nav nav-pills flex-column">
                {{#each fighter_links}}
                {{#if current}}
                <li><a class="nav-link active" href="{{link}}">{{name}}</a></li>
                {{else}}
                <li><a class="nav-link" href="{{link}}">{{name}}</a></li>
                {{/if}}
                {{/each}}
            </ul>
        </nav>

        <!-- take up 12 columns from xs to sm, take up 8 columns from md to xl -->
        <div class="col-12 col-md-8">
            <h1>{{title}}</h1>
            <h2 id="script-entry">Entry Script</h2>
            {{{script_entry}}}
            <h2 id="script-exit">Exit Script</h2>
            {{{script_exit}}}
        </div>

        <!-- Display nothing from xs to sm, display something from md to xl -->
        <nav class="d-none d-md-block col-2 sidebar sidebar-right">
            <ul class="nav nav-pills flex-column">
                <li><a class="nav-link" href="{{fighter_link}}">Main</a></li>
                {{#each action_links}}
                {{#if current}}
                <li><a class="nav-link active" href="{{link}}">{{name}}</a></li>
                {{else}}
                <li><a class="nav-link" href="{{link}}">{{name}}</a></li>
                {{/if}}
                {{/each}}
            </ul>
        </nav>
    </div>
</div>
<script src="/assets_webpack/main.js"></script>

{{/inline}}

{{~> base title=title style_css=assets.style_css page_home=false twitter_description=twitter_description twitter_image=twitter_image ~}}
